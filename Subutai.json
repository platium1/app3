{
  "name": "My-Website",
  "description": "My static website",
  "containers": [
    {
      "hostname": "www",
      "template": "apache",
      "peer-criteria": "HTTP-GROUP",
      "size": "MEDIUM",
      "port-mapping": [
        {
          "protocol": "http",
          "domain": "${domain}",
          "internal-port": "80",
          "external-port": "80"
        },
        {
          "protocol": "tcp",
          "domain": "${domain1}",
          "internal-port": "22",
          "external-port": "4040"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP",
      "max-price": "5",
      "avg-cpu-load": "50",
      "min-free-ram": "128",
      "min-free-disk-space": "10"
    }
  ],
  "user-variables": {
    "domain": {
      "description": "Select your domain or create new one",
      "type": "domain",
      "default": "mysite.envs.subutai.cloud",
      "validation": "[a-zA-Z0-9.-]+"
    },
    "domain1": {
      "description": "Select your domain or create new one",
      "type": "domain",
      "default": "mysite.envs.subutai.cloud",
      "validation": "[a-zA-Z0-9.-]+"
    }
  }
}
